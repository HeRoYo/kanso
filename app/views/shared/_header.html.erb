<header class="p-3 bg-dark text-white">
    <div class="container">
      <div class="d-flex flex-wrap align-items-center justify-content-center justify-content-lg-start">
        <a href="/" class="d-flex align-items-center mb-2 mb-lg-2 text-white text-decoration-none fs-4">
        Kanso
        </a>

        <ul class="nav col-12 col-lg-auto me-lg-auto mb-2 justify-content-center mb-md-0">
          <li>
          <%# マイページ機能までコメント <%= link_to "マイページ", _path, class: "nav-link px-2 text-secondary" %>
          </li>
        </ul>

        <form class="col-12 col-lg-auto mb-3 mb-lg-0 me-lg-3">
          <input type="search" class="form-control form-control-dark" placeholder="検索する">
        </form>

        <% if user_signed_in? %>
          <div class="text-end">
            <%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: "btn btn-outline-light me-2" %>
            <%= link_to "投稿する", new_post_path, class: "btn btn-warning" %>
          </div>
        <% else %>
          <div class="text-end">
            <%= link_to "ログイン", new_user_session_path, class: "btn btn-outline-light me-2" %>
            <%= link_to "新規登録", new_user_registration_path, class: "btn btn-warning" %>
          </div>
        <% end %>
      </div>
    </div>
</header>