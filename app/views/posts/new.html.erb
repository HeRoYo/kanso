<main class="bg-light vh-100">

  <div class="container">

    <div class="row">
      <div class="col-md-6 offset-md-3">
        <div class="card">
          <div class="card-body text-center">
            <h3>感想投稿</h3>
            <%= form_with(model: @post, local: true) do |f| %>

                <%= render 'shared/error_messages', model: f.object %>

                <div class="mb-3 mx-3">
                  <%= f.label :"タイトル", class:"form-label" %>
                  <%= f.text_field :title, class:"form-control" %>
                </div>

                <div class="mb-3 mx-3">
                  <%= f.label :"ジャンル", class:"form-label" %>
                  <%= f.collection_select(:genre_id, Genre.all, :id, :name, {}, {class:"form-select"}) %>
                </div>

                <div class="mb-3 mx-3">
                  <%= f.label :"テキスト", class:"form-label mb-3" %>
                  <%= f.text_area :text, class:"form-control", rows: "13"%>
                </div>

                <div class="text-center mb-3">
                  <%= f.submit "投稿する", class:"btn btn-primary" %>
                </div>

            <% end %>
          </div>
        </div>
      </div>
    </div>

  </div>

</main>
